{# Variable temporaire, définie à false #}
{% set accueil = accueil|default(false) %}

<li class="nav-header">
    {{ category.name }}
</li>

{% if category.channels.count > 0 %}

    {% for channel in category.channels %}
            <li>
        {% if accueil %}
            <a href="{{ path('reader_voir_channel', {'id': channel.id} ) }}">{{ channel.title }}</a>
        {% else %}
            {{ channel.title }}
        {% endif %}
            </li>
    {% endfor %}

{% endif %}