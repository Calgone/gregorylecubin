{% extends "GregReaderBundle::layout.html.twig" %}

{% block title %} 
Accueil - {{ parent() }} 
{% endblock %}

{% block reader_body %} 
<h4>Tous les flux<small> >></small></h4>

{% include 'GregReaderBundle:Reader:item.html.twig' with {'accueil': true} %}
<div class="pagination">
    <ul>
     {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
        {% for p in range(1, nbParPage) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('reader_index', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock reader_body %}

{% block documentReady %}
    {{ parent() }}
    $('#btnMarkRead').click(function(){
        readerItemsMarkRead('{{ path("reader_items_mark_read") }}');
        
    });
{% endblock documentReady %}