{# template père du reader Blog #}
{% extends "::layout.html.twig" %}
{% block title %}
Reader - {{ parent() }}
{% endblock %}

{% block body %}
<div class="row-fluid">
    <div class="span2">
    <p>RSS Reader</p>
    </div>
    <div class="span2">
        <a class="btn" id="btnMarkRead" href="#">Tout marquer comme lu</a>
    </div>    
    <div class="span4">
        <div id="divInfo" style="display: none;">
        <span id="spanInfo" class="label">Warning</span>
        </div>
    </div>
    <div class="span2"></div>
    
    
</div>
<div class="row-fluid">
<hr />
</div>
<div class="row-fluid">
    
    <div id="menu" class="span2">
    <div><a class="btn btn-info btn-block" href="{{ path('reader_channel_add') }}">S'abonner</a></div>
    <ul class="nav nav-pills nav-stacked">
        <li><a href="{{ path('blog_accueil') }}">Accueil du site</a></li>
        <li><a href="{{ path('reader_index') }}">Reader</a></li>
        <li><a href="{{ path('reader_channels_manage') }}">Gérer abonnements</a></li>
    </ul>
        {{ render(controller("GregReaderBundle:Reader:menu", {'nombre': 3})) }}
    </div>
    <div id="content" class="span10">
    {# sous-titre commun à tout le bundle #}
    
    {# on définit un nouveau block que les vues du bundle pourront utiliser #}
    {% block reader_body %}
    {% endblock %}
    </div>
</div>
{% endblock %}