{# app/Resources/views/layout.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %} Mon blog{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" />
        {% endblock %}
    </head>

    <body>
        <div class="container">
            <div id="header" class="hero-unit">
                <h1>Grégory Lecubin</h1>
                <p>Mon modeste site perso</p>
                <p><a class="btn btn-primary btn-large" href="http://www.gregorylecubin.com">Lire le tutoriel
                    </a></p>
            </div>        


            <div class="row">
                <div id="menu" class="span3">
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="{{ path('blog_accueil') }}">Accueil du site</a></li>
                        <li><a href="{{ path('blog_ajouter') }}">Ajouter un article</a></li>
                    </ul>
                        {{ render(controller("GregBlogBundle:Blog:menu", {'nombre': 3})) }}
                </div>
                <div id="content" class="span9">
                    {% block body %}
                    {% endblock %}
                    </div>
                </div>
                <hr />

                <footer>
                    <p> &COPY; 2013 Grégory Lecubin</p>
                </footer>
            </div>

            {% block javascripts %}
            <script src="{{ asset('jquery-2.0.2.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}" type="text/css"></script>
            {% endblock %}
        </body>
    </html>