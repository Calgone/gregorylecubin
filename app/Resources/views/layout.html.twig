{# app/Resources/views/layout.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %} Mon blog{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('greg.css') }}" type="text/css" />
        {% endblock %}
        <style type="text/css">
            body {
                padding-top: 60px;
                padding-bottom: 40px;
                }
        </style>
    </head>

    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="#">Grégory Lecubin</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active"><a href="#">Home</a></li>
                            <li><a href="{{ path('reader_index') }}">Reader</a></li>
                            <li><a href="#about">About</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                {% block body %}
                {% endblock %}
            </div>
        
            <hr />

            <footer>
                <p> &COPY; 2013 Grégory Lecubin</p>
            </footer>
        </div>

        {% block javascripts %}
            <script src="{{ asset('jquery-2.0.2.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
        </body>
    </html>